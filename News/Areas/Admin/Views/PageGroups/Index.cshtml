@model IEnumerable<DataLayer.PageGroup>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-success" id="NewGroup">افزودن گروه جدید</a>
    <a class="btn btn-success" href="/">صفحه اصلی سایت</a>


</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupTitle)
            </td>
            <td>
                <a class="btn btn-sm btn-warning" onclick="Edit(@item.GroupId)" title="ویرایش" ><i class="glyphicon glyphicon-edit"></i></a>
                <a class="btn btn-sm btn-danger" onclick="Delete(@item.GroupId)" title="حذف"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
    }

</table>

@*Modal*@

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <div class="modal-body" id="myModalBody">
                ...
            </div>
        </div>
    </div>
</div>
@*End Modal*@

@section scripts{
    <script src="~/Scripts/modal.js"></script>
    <script src="~/Scripts/Custom.js"></script>

}

