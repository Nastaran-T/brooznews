
@model IEnumerable<DataLayer.PageComment>

@foreach (var item in Model)
{
    <!-- start each comment -->
    <li>
        <img src="~/images/avatar.jpg">
        <div>
            <span> @item.UserName </span>
            <span> @item.CreateComment.ToShamsi() </span>
        </div>
        <p>
            @item.CommentText
        </p>
    </li>
    <!-- end each comment -->
}